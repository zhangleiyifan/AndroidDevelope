<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gyz.androiddevelope">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 往sdcard中写入数据的权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 在sdcard中创建/删除文件的权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/zhihu"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".activity.common.LoadActivity"
            android:label="@string/title_activity_load">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.CircleActivity" />
        <activity
            android:name=".activity.ShowInfoActivity"
            android:label="@string/title_activity_do_sth" />
        <activity
            android:name=".activity.account.LoginActivity"
            android:label="@string/title_activity_do_sth" />
        <activity
            android:name=".activity.common.WaveActivity"
            android:label="WaveActivity" />
        <activity
            android:name=".activity.HomeActivity"
            android:label="@string/title_home_page"
            android:launchMode="singleTask"/>
        <activity
            android:name=".activity.NewsDetailActivity"/>
        <activity
            android:name=".base.TestActivity"/>
    </application>

</manifest>
