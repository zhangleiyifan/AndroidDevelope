<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.MainActivity">

    <Button
        android:id="@+id/btnOnClick"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:text="network" />

    <TextView
        android:id="@+id/txtInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnOnClick"
        android:text="do sth." />

    <Button
        android:layout_width="wrap_content"
        android:id="@+id/btnOkHttp"
        android:layout_below="@+id/btnGo"
        android:text="okHttp2.5"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:id="@+id/btnOkHttp3"
        android:layout_below="@+id/btnOkHttp"
        android:text="okHttp3"
        android:layout_height="wrap_content" />


    <Button
        android:layout_width="wrap_content"
        android:id="@+id/view"
        android:layout_below="@+id/btnOkHttp3"
        android:text="view"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:id="@+id/retrofit"
        android:layout_below="@+id/view"
        android:text="retrofit"
        android:layout_height="wrap_content" />
</RelativeLayout>
